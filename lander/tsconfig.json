{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "alwaysStrict": true,
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": true,
        "outDir": "wwwroot/compiledjs"
    },
    "include": [
        "src/main/typescript/*"        
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
